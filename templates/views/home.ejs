    </section>



    <!-- =================== Blog Posts ====================== -->
    <section class="blog__posts__section">


        <% if(blogs.length != 0){ %>

                <div class="main__title">
                    <h2>Shayri Posts </h2>
                    <p>Below are the most recent shayri posts. </p>
                </div>


                <div class="blog__posts__container">

                  <%  if(blogs.length >2){ %>

                                <% for(let i=blogs.length-1 ; i>=blogs.length-2; i--){ %>

                                    <div class="blog__post">
                                        <div class="blog__post__header">
                                            <div class="author__img">
                                                <img src="./images/pngwing.com (3).png" alt="">
                                            </div>

                                            <div class="author__name">
                                                <h2><%= blogs[i].userName %></h2>
                                            </div>
                                        </div>

                                        <div class="blog__post__main">

                                            <p><%= blogs[i].blog %> </p>

                                        </div>

                                        <div class="blog__post__footer">
                                            <div class="like">
                                            <a href="/update_like_count/<%= blogs[i]._id %>"><span class="like__count"><%= blogs[i].likeCount %></span><i class="fas fa-thumbs-up"></i>like</a> 
                                            </div>

                                            <div class="like">
                                                <a href="/comments/<%= blogs[i].id %>"><i class="fas fa-comments"></i>Comment</a> 
                                            </div>

                                            <div class="like">
                                                <a href="#"><i class="fas fa-share"></i>Share</a> 
                                            </div>
                                        </div>
                                    </div>                                
                                <% } %>

                          <% } %>




                          <% if(blogs.length <= 2 ){ %>

                            <% for(let i=(blogs.length==1)? 0 : 1; i>=0; i--){ %>

                                <div class="blog__post">
                                    <div class="blog__post__header">
                                        <div class="author__img">
                                            <img src="./images/pngwing.com (3).png" alt="">
                                        </div>

                                        <div class="author__name">
                                            <h2><%= blogs[i].userName %></h2>
                                        </div>
                                    </div>

                                    <div class="blog__post__main">

                                        <p><%= blogs[i].blog %> </p>

                                    </div>

                                    <div class="blog__post__footer">
                                        <div class="like">
                                        <a href="/update_like_count/<%= blogs[i]._id %>"><span class="like__count"><%= blogs[i].likeCount %></span><i class="fas fa-thumbs-up"></i>like</a> 
                                        </div>

                                        <div class="like">
                                            <a href="/comments/<%= blogs[i].id %>"><i class="fas fa-comments"></i>Comment</a> 
                                        </div>

                                        <div class="like">
                                            <a href="#"><i class="fas fa-share"></i>Share</a> 
                                        </div>
                                    </div>
                                </div>                                
                            <% } %>

                      <% } %>

                          
                

                </div>


                <div class="view__more__post">
                    <a href="/blogs">View More</a>
                </div>

        <% } %>


        
    </section>









    <section class="testimonial__section" id="testimonial__section">

        <div class="section__titile">
            <h2>Testimonial</h2>
            <p>Feedbacks from the visitors lorem lorem lorem loerm</p>
        </div>

        <!-- Swiper -->
        <div class="swiper mySwiper">
            <div class="swiper-wrapper">


                <% for(let i= 0; i<feedbacks.length ; i++){ %>
                    <div class="swiper-slide">
                        <div class="testimonial__box">
                            <div class="quote">
                                <i class="fas fa-quote-right right__quote"></i>
                            </div>
    
                            <div class="content">
                               <p>
                                  <%= feedbacks[i].feedback %>
                                </p>
                            </div>
    
                            <div class="rating____div">
                                <p><i class="fas fa-star rating_star"></i> <%= feedbacks[i].rating %></p>
                            </div>
    
                            <div class="details">
                                <div class="imgBox">
                                    <img src="./images/<%= feedbacks[i].profilePic %>" alt="">
                                </div>
    
                                <h3> 
                                  <%= feedbacks[i].senderName %>
                                </h3>
                            </div>
                        </div>
                    </div>
             <% } %>
               



             
                
            </div>

            <div class="swiper-pagination"></div>
        </div>
    </section>
    









